# ============================================
# XK Media - Environment Configuration
# ============================================
# Скопируйте этот файл в .env и заполните значения
# cp .env.example .env

# --------------------------------------------
# Application Settings
# --------------------------------------------
APP_NAME="XK Media API"
DEBUG=false

# --------------------------------------------
# Database
# --------------------------------------------
# Для разработки (SQLite):
# DATABASE_URL=sqlite:///./xk_media.db

# Для production (PostgreSQL):
DATABASE_URL=postgresql+psycopg2://xkmedia:xkmedia_pass@localhost:5432/xkmedia

# --------------------------------------------
# Security (ОБЯЗАТЕЛЬНО ИЗМЕНИТЕ!)
# --------------------------------------------
# Сгенерируйте надёжный ключ: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-me-to-random-64-character-string-in-production

# JWT настройки
ACCESS_TOKEN_EXPIRE_MINUTES=1440
ALGORITHM=HS256

# --------------------------------------------
# CORS (разделённые запятой домены)
# --------------------------------------------
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://xk-media.ru

# --------------------------------------------
# PayKeeper Integration
# --------------------------------------------
PAYKEEPER_BASE_URL=https://demo.paykeeper.ru
PAYKEEPER_USER=demo
PAYKEEPER_PASSWORD=demo
PAYKEEPER_SECRET_WORD=your_secret_word_from_paykeeper_settings
PAYKEEPER_NOTIFY_PATH=/payments/paykeeper/notify
PAYKEEPER_RETURN_URL=https://xk-media.ru/advertiser/payments

# --------------------------------------------
# Admin User (создаётся автоматически при первом запуске)
# --------------------------------------------
ADMIN_EMAIL=admin@xk-media.ru
ADMIN_PASSWORD=change-me-strong-password
